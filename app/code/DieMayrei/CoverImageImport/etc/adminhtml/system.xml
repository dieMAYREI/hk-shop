<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="diemayrei" translate="label" sortOrder="1001">
            <label>DieMayrei</label>
        </tab>
        <section id="diemayrei" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Cover Import</label>
            <tab>diemayrei</tab>
            <resource>DieMayrei_CoverImageImport::cover_import_config</resource>

            <group id="cover_import" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Zeitschriften</label>
