                    <comment>Aktiviert den automatischen Cover-Import via Cron</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>diemayrei/cover_import/enabled</config_path>
                </field>
            </group>

        </section>
    </system>
</config>
